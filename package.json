    "prettier": "prettier --write .",
    "prepare": "husky"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "pnpm": ">=8.0.0",
    "node": ">=18.0.0 <22.0.0"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
